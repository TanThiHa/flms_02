<% provide :title, @publisher.name %>
<div class="container margin-top">
  <div class="row">
    <%= render "shared/flash" %>
    <h3><b><%= @publisher.name %></b></h3><hr>
  </div>
  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <i class="glyphicon glyphicon-map-marker"></i>
        <span class="nav-label"><%= @publisher.address %></span>
      </div>
      <div class="form-group">
        <i class="glyphicon glyphicon-phone"></i>
        <span class="nav-label"><%= @publisher.phone %></span>
      </div>
    </div>
    <div class="col-md-10">
     <%= render @publisher.books %>
    </div>
  </div>
</div>
