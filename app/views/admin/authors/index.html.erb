<% provide :title, t("admin.authors.author") %>
<%= render "admin/static_pages/layout" %>
  <content class="col-md-6 content">
    <div class="col-md-11">
      <%= render "shared/flash" %>
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <h3 class="panel-title"><%= t "author" %></h3>
            </div>
            <div class="col col-xs-6 text-right">
                <%= link_to new_admin_author_path do %>
                  <button type="button" class="btn btn-sm btn-primary btn-create">
                    <%= t "admin.create" %>
                  </button>
                <% end %>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr>
                <th><em class="fa fa-cog"></em></th>
                <th><%= t "name" %></th>
                <th><%= t "phone" %></th>
                <th><%= t "address" %></th>
              </tr>
            </thead>
            <tbody>
              <% @authors.each do |author| %>
                <tr>
                  <td align="center">
                    <%= link_to edit_admin_author_path(author), class: "btn btn-default" do %>
                      <em class="fa fa-pencil"></em>
                    <% end %>
                    <%= link_to admin_author_path(author), method: :delete, class: "btn btn-danger",
                      data: {confirm: t("admin.authors.you_sure")} do %>
                      <em class="fa fa-trash"></em>
                    <% end %>
                  </td>
                  <td><%= author.name %></td>
                  <td><%= author.phone %></td>
                  <td><%= author.address %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate %>
    </div>
  </content>
</div>
