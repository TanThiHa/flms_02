<tr>
  <td align="center">
    <%= link_to admin_book_path(book), class: "btn btn-default" do %>
      <em class="fa fa-eye"></em>
    <% end %>
    <%= link_to admin_book_path(book), method: :delete, class: "btn btn-danger",
      data: {confirm: t("admin.books.you_sure")} do %>
      <em class="fa fa-trash"></em>
    <% end %>
  </td>
  <td><%= book.name %></td>
  <td><%= book.category.name %></td>
  <td><%= book.writers %></td>
  <td><%= book.publisher.name %></td>
  <td><%= book.year %></td>
</tr>
