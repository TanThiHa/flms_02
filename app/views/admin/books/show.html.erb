<% provide :title, t("admin.books.book") %>
<%= render "admin/static_pages/layout" %>
  <content class="col-md-9 content">
    <%= render "shared/flash" %>
    <div class="col-md-6">
      <%= image_tag @book.image_url.to_s, class: "img-book" %>
    </div>
    <div class="col-md-6">
      <table class="table table-striped table-bordered table-list">
        <thead>
          <tr>
            <th><em class="fa fa-cog"></em></th>
            <th>
              <%= link_to edit_admin_book_path(@book), class: "btn btn-default" do %>
                <em class="fa fa-pencil"></em>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= t "admin.books.name" %></td>
            <td><%= @book.name %></td>
          </tr>
          <tr>
            <td><%= t "admin.books.category" %></td>
            <td><%= @book.category_name %></td>
          </tr>
          <tr>
            <td><%= t "admin.books.author" %></td>
            <td><%= @book.writers %></td>
          </tr>
          <tr>
            <td><%= t "admin.books.publisher" %></td>
            <td><%= @book.publisher_name %></td>
          </tr>
          <tr>
            <td><%= t "admin.books.num_of_page" %></td>
            <td><%= @book.num_of_pages %></td>
          </tr>
          <tr>
            <td><%= t "admin.books.year" %></td>
            <td><%= @book.year %></td>
          </tr>
          <tr>
            <td><%= t "admin.books.quantity" %></td>
            <td><%= @book.quantity %></td>
          </tr>
          <tr>
            <td><%= t "admin.books.price" %></td>
            <td><%= @book.price %></td>
          </tr>
          <tr>
            <td><%= t "admin.books.content" %></td>
            <td><%= @book.content %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </content>
</div>
