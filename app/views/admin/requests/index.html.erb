<% provide :title, t("admin.requests.request") %>
<%= render "admin/static_pages/layout" %>
  <content class="col-md-9 content">
    <div class="col-md-12">
      <%= render "shared/flash" %>
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-9">
              <h3 class="panel-title"><%= t "admin.requests.request" %></h3>
            </div>
            <div class="col-md-3">
              <%= render "filter" %>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr>
                <th><%= t "book" %></th>
                <th><%= t "user" %></th>
                <th><%= t "quantity" %></th>
                <th><%= t "from_date" %></th>
                <th><%= t "to_date" %></th>
                <th><%= t "price" %></th>
                <th><em class="fa fa-cog"></em></th>
              </tr>
            </thead>
            <tbody>
              <%= render @requests %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate %>
    </div>
  </content>
</div>
