<% provide :title, t("admin.categories.category") %>
<%= render "admin/static_pages/layout" %>
  <content class="col-md-6 content">
    <div class="col-md-11">
      <%= render "shared/flash" %>
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <h3 class="panel-title"><%= t "category" %></h3>
            </div>
            <div class="col col-xs-6 text-right">
                <%= link_to new_admin_category_path do %>
                  <button type="button" class="btn btn-sm btn-primary btn-create">
                    <%= t "admin.create" %>
                  </button>
                <% end %>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr>
                <th><em class="fa fa-cog"></em></th>
                <th><%= t "name" %></th>
              </tr>
            </thead>
            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td align="center">
                    <%= link_to edit_admin_category_path(category),
                    class: "btn btn-default" do %>
                      <em class="fa fa-pencil"></em>
                    <% end %>
                    <%= link_to admin_category_path(category), method: :delete,
                    class: "btn btn-danger",
                    data: {confirm: t("admin.categories.you_sure")} do %>
                      <em class="fa fa-trash"></em>
                    <% end %>
                  </td>
                  <td><%= category.name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate %>
    </div>
  </content>
</div>
