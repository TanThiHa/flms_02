<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag asset_path("favicon.png"), rel: :icon, type: "image/png" %>
    <%= stylesheet_link_tag t("app"), media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag t("app"), "data-turbolinks-track": "reload" %>
    <%= render "layouts/shim" %>
  </head>
  <body>
    <%= render "layouts/nav" %>
    <%= yield %>
  </body>
</html>
