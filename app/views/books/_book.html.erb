<div class="col-md-3 col-sm-6">
  <div class="product-grid6">
    <div class="product-image6">
      <%= link_to book_path(book) do %>
        <%= image_tag book.image_url.to_s, class: "pic-1" %>
      <% end %>
    </div>
    <div class="product-content">
      <h3 class="title"><a href="#"><%= book.name %></a></h3>
      <div class="price"><%= book.price %></div>
      <div><%= book.writers %></div>
      <div><%= book.avg_rating %></div>
    </div>
    <ul class="social">
      <li>
        <%= link_to book_path(book), "data-tip": "View" do %>
          <i class="fa fa-eye"></i>
        <% end %>
      </li>
      <li><a href="" data-tip="Like"><i class="fa fa-heart"></i></a></li>
      <li><a href="" data-tip="Borrow"><i class="fa fa-shopping-bag"></i></a></li>
    </ul>
  </div>
</div>
