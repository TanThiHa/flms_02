<%= render "layouts/header" %>
<div class="content-wrapper">
  <section class="primary" id="library">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2><%= t "sun_library" %></h2>
          <hr class="star-primary">
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4">
          <%= link_to image_tag("author.png"), root_path, class: "home_img"%>
        </div>
        <div class="col-sm-4">
          <%= link_to image_tag("book.png"), root_path, class: "home_img" %>
        </div>
        <div class="col-sm-4">
          <%= link_to image_tag("publisher.png"), root_path, class: "home_img" %>
        </div>
      </div>
    </div>
  </section>

  <section class="success" id="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2><%= t "static_pages.home.about" %></h2>
          <hr class="star-light">
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4 col-lg-offset-2">
          <p><%= t "static_pages.home.vision" %></p>
        </div>
        <div class="col-lg-4">
           <p><%= t "static_pages.home.mission" %></p>
        </div>
      </div>
    </div>
  </section>
</div>
